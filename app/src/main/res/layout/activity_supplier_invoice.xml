<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_SupInv.SupplierInvoice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="Invoice #"
                android:id="@+id/txtDoc1No"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:hint="Scan Item"
                android:background="@drawable/border"
                android:id="@+id/txtItemCode"
                android:singleLine="true"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Description"
                android:id="@+id/txtDescription"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="UOM"
                android:id="@+id/txtUOM"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"
                android:visibility="gone"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="FactorQty"
                android:id="@+id/txtFactorQty"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="ItemBatch"
                android:id="@+id/txtItemBatch"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="Expiry Date"
                android:id="@+id/txtWarrantyDate"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:text="-"
                android:id="@+id/btnMinus"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:text="1"
                android:id="@+id/vQty"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:text="+"
                android:id="@+id/btnPlus"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="right|center"
                android:layout_weight="1"
                android:hint="0.00"
                android:id="@+id/txtHCUnitCost"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="right|center"
                android:layout_weight="1"
                android:hint="0.00"
                android:id="@+id/txtHCLineAmt"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Add Item"
                android:id="@+id/btnAddItem"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.51"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/rvList">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.09"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:textColor="@color/colorBlack"
                android:text="Back"
                android:id="@+id/btnBack"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:text="Submit"
                android:id="@+id/btnSave"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>