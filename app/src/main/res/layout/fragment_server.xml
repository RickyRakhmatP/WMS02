<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="MACAddress :"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="MACAddress"
                    android:id="@+id/txtMACAddress"/>

            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Host"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Server Name"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtServerName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="DB Name"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Database Name"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtDBName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="User Name"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="User Name"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtUserName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Password"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Password"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:id="@+id/txtPassword"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Port"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Port"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtPort"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Branch Code"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Branch Code"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtBranchCode"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Location Code"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Location Code"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtLocationCode"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Store Code"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Store Code"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtStoreCode"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="DB Status"/>

                <Switch
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:checked="false"
                    android:textSize="16sp"
                    android:text="Offline"
                    android:id="@+id/swDBStatus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left|center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="CharSet Type"/>

                <Switch
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:checked="false"
                    android:textSize="16sp"
                    android:text="UTF-8"
                    android:id="@+id/swCharSetType"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:hint="Label Printer IP Address:"
                    android:enabled="true"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtPrinterIP"
                    android:layout_marginRight="2dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:hint="Port"
                    android:text="9100"
                    android:enabled="true"
                    android:gravity="left|center"
                    android:paddingLeft="4dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:id="@+id/txtPrinterPort"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_success"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="4dp"
                    android:text="Check Connection"
                    android:id="@+id/btnCheck"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btnSave"
                    android:enabled="false"
                    android:background="@color/color_warning"
                    android:textColor="@color/colorWhite"
                    android:text="REGISTER DEVICE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:layout_marginBottom="6dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btnBack"
                    android:background="@color/color_primary"
                    android:textColor="@color/colorWhite"
                    android:text="BACK"/>

            </LinearLayout>

         </LinearLayout>

    </LinearLayout>

</ScrollView>