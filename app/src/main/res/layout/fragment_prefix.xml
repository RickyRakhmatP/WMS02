<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simpleSwipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="6dp"
          android:weightSum="1"
          android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:weightSum="1">

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="Prefix GRNDO"
                      android:id="@+id/PrefixGRNDO"
                      android:layout_marginRight="4dp"/>

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:id="@+id/LastNoGRNDO"
                      android:hint="LastNo GRNDO" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:weightSum="1">

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="Prefix IS"
                      android:id="@+id/PrefixIS"
                      android:layout_marginRight="4dp"/>

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="LastNo IS"
                      android:id="@+id/LastNoIS"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1"
                android:weightSum="1"
                android:orientation="horizontal">

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="Prefix RS"
                      android:id="@+id/PrefixRS"
                      android:layout_marginRight="4dp"/>

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="LastNo RS"
                      android:id="@+id/LastNoRS"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1"
                android:weightSum="1"
                android:orientation="horizontal">

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="Prefix TS"
                      android:id="@+id/PrefixTS"
                      android:layout_marginRight="4dp"/>

                  <EditText
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:background="@drawable/borderln"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:hint="LastNo TS"
                      android:id="@+id/LastNoTS"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1"
                android:weightSum="1"
                android:orientation="horizontal">

                  <Button
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:layout_marginRight="4dp"
                      android:text="Back"
                      android:textColor="@color/colorWhite"
                      android:background="@color/color_warning"
                      android:id="@+id/btnBack"/>

                  <Button
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:text="Save Changes"
                      android:textColor="@color/colorWhite"
                      android:background="@color/color_primary"
                      android:id="@+id/btnSave"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight=".1">



            </LinearLayout>

      </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>